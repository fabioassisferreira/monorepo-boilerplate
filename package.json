{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint-src": "eslint src",
    "lint-src-fix": "eslint src --fix",
    "lint-fix": "eslint --fix",
    "format-src": "prettier src --check",
    "format-src-fix": "prettier src --write",
    "format-fix": "prettier --write",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/react-lib/src/components/**/*.{ts,tsx}": [
      "npm run lint-fix",
      "npm run format-fix"
    ],
    "packages/react-lib/src/components/**/*.tsx": "npm run test --findRelatedTests --bail"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "lerna": "^8.2.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.7"
  }
}
